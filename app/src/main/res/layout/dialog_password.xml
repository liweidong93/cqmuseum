<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_10_white">

    <ImageView
        android:id="@+id/iv_passworddialog_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@mipmap/dialog_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        />

    <TextView
        android:id="@+id/tv_passworddialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40px"
        android:textColor="@color/color_02B68A"
        android:text="退出界面"
        android:layout_marginTop="30px"/>

    <EditText
        android:id="@+id/et_passworddialog_input"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@drawable/stroken_blue"
        android:layout_below="@+id/tv_passworddialog_title"
        android:layout_marginTop="80px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:hint="请输入退出密码"
        android:textColorHint="#7002B68A"
        android:textColor="@color/color_02B68A"
        android:textSize="36px"
        android:gravity="center"
        android:inputType="numberPassword"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginTop="80px"
        android:layout_below="@+id/et_passworddialog_input">

        <TextView
            android:id="@+id/tv_passworddialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="32px"
            android:textColor="@color/color_4DA3E6"
            android:text="确认"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tv_passworddialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="32px"
            android:textColor="@color/color_4DA3E6"
            android:text="我再想想"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
