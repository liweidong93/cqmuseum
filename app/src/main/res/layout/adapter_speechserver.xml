<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="60px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_speechserveradapter_left"
        android:layout_width="481px"
        android:layout_height="276px"
        android:scaleType="fitXY"
        android:layout_marginLeft="79px"
        />

    <TextView
        android:id="@+id/tv_speechserveradapter_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="@color/color_3AA985"
        android:layout_marginLeft="31px"/>

    <ImageView
        android:id="@+id/iv_speechserveradapter_right"
        android:layout_width="481px"
        android:layout_height="276px"
        android:scaleType="fitXY"
        android:layout_marginLeft="79px"
        />


</LinearLayout>
