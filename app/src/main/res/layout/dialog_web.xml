<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_dialog_web"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg_left"
    >

    <WebView
        android:id="@+id/wv_webviewdialog_load"
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </WebView>

    <ProgressBar
        android:id="@+id/pb_webviewdialog_progress"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="35px"
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/shape_webview_progressdialog"
        android:layout_height="5px"
        />

    <ImageView
        android:id="@+id/iv_webview_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/webview_error"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>