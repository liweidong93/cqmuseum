<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28px"
    android:layout_marginRight="28px"
    android:layout_marginTop="60px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_pandaadapterone_name"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@drawable/corner_10_2693ff">

        <TextView
            android:id="@+id/tv_pandaadapterone_onename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="30px"
            android:layout_marginLeft="30px"
            />

        <ImageView
            android:id="@+id/iv_pandaadapterone_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/white_close"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pandaadapterone_twodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        >


    </android.support.v7.widget.RecyclerView>


</LinearLayout>
