<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_10_white">

    <ImageView
        android:id="@+id/iv_selectdialog_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@mipmap/dialog_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        />

    <ImageView
        android:id="@+id/icon_selectdialog_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_selectdialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"/>

    <TextView
        android:id="@+id/tv_selectdialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:textColor="@color/color_02B68A"
        android:textSize="36px"
        android:gravity="center"
        android:text="正在执行导航任务，确定要取消导航吗？"
        android:layout_below="@+id/icon_selectdialog_robot"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_marginTop="60px"
        android:layout_below="@+id/tv_selectdialog_content">

        <TextView
            android:id="@+id/tv_selectdialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="32px"
            android:textColor="@color/color_4DA3E6"
            android:text="确认"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tv_selectdialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="32px"
            android:textColor="@color/color_4DA3E6"
            android:text="我再想想"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
